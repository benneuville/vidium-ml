{
    "name": "VidiumML",
    "displayName": "VidiumML",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "vidium-ml",
                "aliases": [
                    "VidiumML",
                    "vidium-ml"
                ],
                "extensions": [
                    ".vml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vidium-ml",
                "scopeName": "source.vidium-ml",
                "path": "./syntaxes/vidium-ml.tmLanguage.json"
            }
        ],
        "viewsContainers": {
            "panel": [
                {
                    "id": "vidiumML-Visualizer",
                    "title": "VidiumML Visualizer",
                    "icon": "media/vidiumML.svg"
                }
            ]
        },
        "views": {
            "vidiumML-Visualizer": [
                {
                    "id": "vidiumML-Visualizer-view",
                    "name": "VidiumML Visualizer",
                    "type": "webview",
                    "ctorDescriptor": {
                        "id": "vscode-codicons.vscode-codicon-extensions-view-icon"
                    }
                }
            ]
        }
    },
    "activationEvents": [
        "onLanguage:vidium-ml",
        "onStartupFinished",
        "onDidOpenTextDocument",
        "onFileSystem:vml",
        "onCommand:vidiumML-Visualizer-view.update"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "vidium-ml-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "@types/fluent-ffmpeg": "^2.1.27",
        "axios": "^1.7.9",
        "chalk": "^4.1.2",
        "chevrotain": "^10.4.1",
        "commander": "^8.0.0",
        "fluent-ffmpeg": "^2.1.3",
        "fs": "^0.0.1-security",
        "get-video-duration": "^4.1.0",
        "google-auth-library": "^9.15.0",
        "googleapis": "^144.0.0",
        "langium": "~1.0.0",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-uri": "^3.0.2",
        "youtube-api": "^3.0.1"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "eslint": "^8.17.0",
        "langium-cli": "~1.0.0",
        "typescript": "^4.9.4"
    }
}
