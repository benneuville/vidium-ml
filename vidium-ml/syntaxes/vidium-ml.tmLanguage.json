{
  "name": "vidium-ml",
  "scopeName": "source.vidium-ml",
  "fileTypes": [
    ".vml"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.vidium-ml",
      "match": "\\b(after|and|as|audio|before|clip|color|coordinate|cut|define|end|for|from|image|lasts|named|opacity|position|rotate|scale|size|start|subtitle|text|to|transition|use|video)\\b|\\b(x=|y=)\\B"
    },
    {
      "name": "string.quoted.double.vidium-ml",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.vidium-ml",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.vidium-ml",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.vidium-ml"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.vidium-ml"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.vidium-ml"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.vidium-ml"
        }
      ]
    }
  }
}